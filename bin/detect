#!/usr/bin/env bash
# bin/use <build-dir>

if [ -f $1/gradlew ]; then
  echo "Gradle" && exit 0

# Detect these Gradle specific files, so we can fail with a message 
# asking the user to enable the Gradle Wrapper for their project.  
elif [ -f $1/build.gradle ]; then
  echo "Gradle" && exit 0
elif [ -f $1/settings.gradle ]; then
  echo "Gradle" && exit 0

else
  echo "no" && exit 1
fi
